CREATE FUNCTION ContarClientesPorDia
(
    @data DATE
)
RETURNS INT
AS
BEGIN
    DECLARE @totalClientes INT;

    -- Conta o n√∫mero de clientes cadastrados na data fornecida
    SELECT @totalClientes = COUNT(*)
    FROM Clientes
    WHERE CAST(data_cadastro AS DATE) = @data;

    RETURN @totalClientes;
END;
